server {
    listen 80;
    server_name localhost;

    # WebSocket servers on ports 3000-3999
    # Access via /ws/3000, /ws/3001, etc.
    location ~ "^/ws/3[0-9]{3}$" {
        # Extract port number from URI
        set $ws_port '';
        if ($request_uri ~ "^/ws/(3[0-9]{3})$") {
            set $ws_port $1;
        }

        proxy_pass http://127.0.0.1:$ws_port;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket timeouts
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
    }

    # API endpoint on port 8080
    location /get {
        proxy_pass http://127.0.0.1:8080/get;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Only allow GET method
        limit_except GET {
            deny all;
        }
    }

    location /kill {
        proxy_pass http://127.0.0.1:8080/kill;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Only allow GET method
        limit_except GET {
            deny all;
        }
    }

    # Health check endpoint
    location /health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }
}